{-Agda
+-comm : ∀ (m n : ℕ) → m + n ≡ n + m
+-comm m zero =
  begin
    m + zero
  ≡⟨ +-identity m ⟩
    m
  ≡⟨⟩
    zero + m
  ∎
+-comm m (suc n) =
  begin
    m + suc n
  ≡⟨ +-suc m n ⟩
    suc (m + n)
  ≡⟨ cong suc (+-comm m n) ⟩
    suc (n + m)
  ≡⟨⟩
    suc n + m
  ∎
Agda-}

\func +-comm (m n : Nat) : m + n = n + m \elim n
  | 0 =>
    m + 0 =<>=
    m =<>=
    0 + m `qed
  | suc n =>
    m + suc n =<>=
    suc (m + n) ==< cong suc (+-comm m n) >==
    suc (n + m) =<>=
    suc n + m `qed

