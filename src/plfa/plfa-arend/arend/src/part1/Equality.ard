\func sym {A : \Type} {x y : A} (x=y : x = y) : y = x
  | idp => idp

{-Agda
trans : ∀ {A : Set} {x y z : A}
  → x ≡ y
  → y ≡ z
    -----
  → x ≡ z
trans refl refl  =  refl
Agda-}

\func trans {A : \Type} {x y z : A} (x=y : x = y) (y=z : y = z) : x = z
  | idp, idp => idp

{-Agda
cong : ∀ {A B : Set} (f : A → B) {x y : A}
  → x ≡ y
